@model InventoryManagement.Application.Contracts.Inventory.ReduceInventory
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">کاهش موجودی انبار</h4>
</div>

<form asp-page="./Index" asp-page-handler="Reduce"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Count" class="control-label">تعداد</label>
                    <input class="form-control" asp-for="Count" />


                    <span asp-validation-for="Count" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Discription" class="control-label">توضیحات</label>
                    <input type="text" class="form-control" asp-for="Discription">
                    <span asp-validation-for="Discription" class="error"></span>
                </div>
            </div>
        </div>


        <input type="hidden" asp-for="InventoryId" value="@Model.InventoryId" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-danger waves-effect waves-light">کاهش موجودی</button>
    </div>
</form>